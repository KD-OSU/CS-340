<!-- Add a new hold -->
<div class="border container w-75 bg-light align-items-center gy-5">
    <form class="m-3" name="add" id="addHoldForm">
        <div class="row">
            <div class="col">
                <h5 class="text-center">Create new hold</h5>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label class="form-label">Material:</label>
                <select id="addMaterialID" class="form-control mb-2">
                    {{#each materials}}
                    <option value="{{this.materialID}}">{{this.title}}, {{this.author}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="col-4">
                <label class="form-label">Patron:</label>
                <select id="addPatronID" class="form-control mb-2">
                    {{#each patrons}}
                    <option value="{{this.patronID}}">{{this.fName}} {{this.lName}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="col-4">
                <label class="form-label">Employee:</label>
                <select id="addEmployeeID" class="form-control mb-2">
                    <option value="">Select an employee (Optional)</option>
                    {{#each employees}}
                    <option value="{{this.employeeID}}">{{this.fName}} {{this.lName}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <button type="submit" class="btn btn-primary" id="addHoldSubmit">Submit</button>
            </div>
        </div>
    </form>    
</div>

