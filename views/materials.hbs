<!-- ADD Form Content-- This will eventually need to submit somewhere for real-->
<div class="border container w-75 bg-light align-items-center gy-5" id="addMaterialForm">
    <form class="m-3" name="add">
        <div class="row">
            <div class="col">
                <h5 class="text-center">Add new material to library</h5>
            </div>
        </div>
        <div class="row">
            
            <div class="col-4">
                <label class="form-label">Title:</label>
                <input type="text" id="addTitle" class="form-control mb-2" placeholder="The Cat in the Hat" required>
            </div>
            <div class="col-4">
                <label class="form-label">Author:</label>
                <input type="text" id="addAuthor" class="form-control mb-2" placeholder="Dr. Seuss">
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <label class="form-label">Medium:</label>
                <input type="text" id="addMedium" class="form-control mb-2" placeholder="Book, DVD, Audiobook">
            </div>
            <div class="col-3">
                <label class="form-label">Genre:</label>
                <input type="text" id="addGenre" class="form-control mb-2" placeholder="Fiction, Non-fiction, etc.">
            </div>
            <div class="col-2">
                <label class="form-label">Total Copies:</label>
                <input type="number" id="addTotalCopies" class="form-control mb-2" placeholder="##">
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="addRestricted">
                    <label class="form-check-label" for="restricted">Restricted?</label>
                </div>
            </div>
            <div class="col-2">
                <button type="submit" class="btn btn-primary" id="submit">Submit</button>
            </div>
        </div>
    </form>    
</div>


